<h1>Whisper一覧</h1>
<p><%= notice %></p>
<%= link_to '新規登録', new_task_path, class: 'btn btn-primary' %>

<table>
  <tr>
    <th>Whisper内容</th>
    <th>登録日時</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.content, task_path(task) %></td>
    <td><%= task.created_at %></td>
    <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-primary' %></td>
  </tr>
<% end %>
</table>
