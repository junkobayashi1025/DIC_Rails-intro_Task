<header>
  <div class="header-logo">
    Whisper~Index~ <%= link_to 'New', new_task_path, class: 'btn btn-primary' %>
    <p><%= notice %></p>
  </div>

  <ul class="header-menus">
    <li><a href="/">Top</a></li>
    <li><a href="/tasks/new">Whisper</a></li>
    <li><a href="/tasks">Index</a></li>
    <div class="clear"></div>
  </ul>

<table>
  <tr>
    <th>Content</th>
    <th>Date</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.content, task_path(task) %></td>
    <td><%= task.created_at %></td>
    <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary', data: { confirm: '本当に編集していいですか？' } %>
    <%= link_to 'Delete', task_path(task.id), class: 'btn btn-primary', method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
</header>
<div class="wrapper">
</div>
<footer>
<p>&copy;Copyright Jun Kobayashi</p>
</footer>
